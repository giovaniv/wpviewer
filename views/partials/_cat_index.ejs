
<section class="container mt-3 bg-light border border-info shadow rounded p-3">

  <h3 class="display-7 text-center">Category List</h3>

  <!-- Filter to search for a category name or substring -->
  <div class="container-fluid mt-5">
    <form class="form-inline justify-content-center" method="post" action="/categories">
      <div class="form-group mb-3 pr-2">
        <label for="categoryName" class="sr-only">Search by name:</label>
        <input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Category">
      </div>
      <button type="submit" class="btn btn-primary mb-3">Search</button>
    </form>
  </div>

  <!-- CATEGORY LIST -->
  <div class="container mt-5 mb-5">
    <% if (categories && categories.length > 0) { %>
      <div class="row text-left">
        <% for (var i = 0; i < categories.length; i++) { %>
          <% if (i > 0 && i % 4 === 0) { %>
            <div class="w-100"></div>
          <% } else { %>
            <div class="w-*"></div>
          <% } %>
          <div class="col text-left">
            <a href="/products/category/<%=categories[i].id%>">
              <font class="small"><%=categories[i].name%></font>
            </a>
          </div>
        <% } %>
      </div>
    <%} else { %>
      <!-- if any category was found (category is empty in the backend) -->
      <%- include('_no_result') %>
    <% } %>
  </div>
  
</section>
